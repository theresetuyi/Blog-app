<div>
    <%= link_to 'Home', root_path %>
  </div>

  <h2>Post id: <%= @post.id %></h2>
  <h2>Post title: <%= @post.title%> by <%= User.find(@post.author_id).name%> </h2>
  <span>Comments: <%= @post.comments_counter %></span>
  <span>Likes: <%= @post.likes_counter %></span>
  <p><%= @post.text %></p>

  <h2>Comments</h2>

  <% @post.comments.includes(:author).each do |comment| %>

    <p>Comment author: <%= comment.author.name if comment.author %></p>
    <p>Comment content: <%= comment.text %></p>
    <% if can? :destroy, comment %>
    <%= button_to 'Delete comment', comment_path(comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' }, class: 'btn btn-danger' %>
  <% end %>
  <% end %>
  <% if @post.comments.empty?%>
    <p>This post has no comments</p>
  <% end %>
  <%= form_with url: '/likes/new' do |form| %>
    <%= form.hidden_field :post_id, value: @post.id %>
    <%= form.submit 'Like this post' %>
  <% end %>
  <%= link_to 'Create new comment', "/comment/new/#{@post.id}" %>
